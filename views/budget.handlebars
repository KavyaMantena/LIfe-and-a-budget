  <section class="savings">
    <form>
      <table>
        <tr class="header">
          <th>Savings</th>
          <th>Budget</th>
          <th>Actual</th>
          <th class="edit">Save</th>
          <th class="delete">Delete</th>
        </tr>
        {{#each savings}}
          <tr>
            {{!-- <form class="savings-form" id="{{ id }}_savings"> --}}
            <td><input
                type="text"
                value="{{title}}"
                id="savings-title_{{id}}"
              /></td>
            <td><input
                type="text"
                value="{{Budget}}"
                id="savings-budget_{{id}}"
              /></td>
            <td><input
                type="text"
                value="{{Actual}}"
                id="savings-actual_{{id}}"
              /></td>
            <td><button
                class="save-savings-btn"
