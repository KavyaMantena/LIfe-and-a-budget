<header>
  <h1 class="title">
    ${User's} Budget
  </h1>

  {{!-- <div>
        {{#each income}}
        <p> {{ title }} {{ Budget }} {{ Actual }} </p>
        {{/each}}
    </div>

    <div>
        {{#each expense}}
        <p> {{ title }} {{ Budget }} {{ Actual }} </p>
        {{/each}}
    </div> --}}

  <div class="topTable">
    <form>
      <table>
        <tr class="header">
          <th>Income</th>
          <th>Budget</th>
          <th>Actual</th>
          <th class="edit">Save</th>
          <th class="delete">Delete</th>
        </tr>
        {{#each income}}
          <tr>
            {{!-- <form class="income-form" id="{{ id }}_income"> --}}
            <td><input
                type="text"
                value="{{title}}"
                id="income-title_{{id}}"
              /></td>
            <td><input
                type="text"
                value="{{Budget}}"
                id="income-budget_{{id}}"
              /></td>
            <td><input
                type="text"
                value="{{Actual}}"
                id="income-actual_{{id}}"
              /></td>
            <td><button
                class="save-income-btn"
                id="{{id}}_income-save"
              >Save</button></td>
            {{! </form> }}
            <td><button
                class="delete-income-btn"
                id="{{id}}_delete-income"
              >Delete</button></td>
          </tr>
        {{/each}}
        <tr>
          <td><input
              type="text"
              placeholder="EX Income"
              id="new-income-title"
            /></td>
          <td><input
              type="text"
              placeholder="EX 300"
              id="new-income-budget"
            /></td>
          <td><input
              type="text"
              placeholder="EX 302.49"
              id="new-income-actual"
            /></td>
        </tr>
      </table>
    </form>
    <button id="new-income-btn">Add Row</button>
  </div>

  <div class="chartTop">
    <canvas id="topChart" width="450" height="150"></canvas>
  </div>

  <div class="top-right">
    <div>
      Availible to budget
    </div>
    <div>
      Availible to spend
    </div>
    <div>
      <a href="/login">
        <button
          id="logout"
          class="login-btn fa-solid fa-user"
          role="button"
        >Logout</button>
      </a>
    </div>
  </div>

</header>

<main class="main">

