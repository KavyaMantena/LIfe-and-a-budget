    </header>

    <main class="main">

        <section class="bills">
            <form>
                <table>
                    <tr class="header">
                        <th>Bills</th>
                        <th>Budget</th>
                        <th>Actual</th>
                        <th class="edit">Save</th>
                        <th class="delete">Delete</th>
                    </tr>
                    {{#each expense}}
                    <tr>
                        <form class="expenses-form" id="{{ id }}">
                            <td><input type="text" value="{{ title }}" id="expenses-title_{{ id }}"></td>
                            <td><input type="text" value="{{ Budget }}" id="expenses-budget_{{ id }}"></td>
                            <td><input type="text" value="{{ Actual }}" id="expenses-actual_{{ id }}"></td>
                            <td><button>Save</button></td>
                        </form>
                        <td><button class="delete-expenses-btn" id="{{ id }}_delete">Delete</button></td>
                    </tr>
                    {{/each}}
                </table>
            </form>
            <button>Add Row</button>
        </section>

        <section class="savings">
            <form>
                <table>
                    <tr class="header">
                        <th>Savings</th>
                        <th>Budget</th>
                        <th>Actual</th>
                        <th class="edit">Save</th>
                        <th class="delete">Delete</th>
                    </tr>
                    {{#each savings}}
                    <tr>
                        <form class="income-form" id="{{ id }}">
                        <td><input type="text" value="{{ title }}" id="income-title_{{ id }}"></td>
                        <td><input type="text" value="{{ Budget }}" id="income-budget_{{ id }}"></td>
                        <td><input type="text" value="{{ Actual }}" id="income-actual_{{ id }}"></td>
                        <td><button type="submit">Save</button></td>
                        </form>
                        <td><button class="delete-savings-btn" id="{{ id }}_delete">Delete</button></td>
                    </tr>
                    {{/each}}
                </table>
            </form>
            <button>Add Row</button>
        </section>

        <section class="chart1">
            <canvas id="chart1"></canvas>
        </section>

    </main>

    <section class="chart2">
