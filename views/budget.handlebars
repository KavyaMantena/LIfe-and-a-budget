            {{! </form> }}
            <td><button
                class="delete-savings-btn"
                id="{{id}}_delete-savings"
              >Delete</button></td>
          </tr>
        {{/each}}
        <tr>
          <td><input
              type="text"
              placeholder="EX Savings"
              id="new-savings-title"
            /></td>
          <td><input
              type="text"
              placeholder="EX 300"
              id="new-savings-budget"
            /></td>
          <td><input
              type="text"
              placeholder="EX 302.49"
              id="new-savings-actual"
            /></td>
        </tr>
      </table>
    </form>
    <button id="new-savings-btn">Add Row</button>
  </section>

  <section class="chart1">
    <canvas id="chart1"></canvas>
  </section>

</main>

